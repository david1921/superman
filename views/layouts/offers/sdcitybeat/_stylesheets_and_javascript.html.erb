<%= javascript_include_tag :defaults, "ghostie", "lightbox", "coupons" %>

<% if @publisher.label == "sdcitybeat" %>
<script type='text/javascript'>
// Overwritting, since we want a 'get' request instead of a 'post'
// would be nice if you could specify this as a tag on the link element.
lightbox.prototype.loadInfo = function () {
  var myAjax = new Ajax.Request(
      this.content,
      {method: 'get', parameters: "", onComplete: this.processInfo.bindAsEventListener(this)}
	);
};
</script>
<% end -%>
