<% set_page_title "Log in"%>

<% form_for :user, :url => { :action => :create }, :html => {:id => "login_form"} do |f| -%>
<div class="left_column">
  <div class="login-box-wrap">
    <div class="login-box-header">
		    <div class="login-box-logo"></div>
    </div><!-- end login-box-header -->
    <%= f.text_field_div :login %>
    <%= f.password_field_div :password %>

    <div class="row">
      <div class="label">&nbsp;</div>
      <div class="input">
        <%= link_to "Forgot your password?", new_password_reset_path %>
      </div>
    </div>

    <div class="buttons">
      <%= submit_tag("Login", :id => "login_button", :class => "button", :name => "login") %>
    </div><!-- end login button -->
  </div><!-- end login-box-wrap -->

</div><!-- end left_column   -->
<% end -%>


<script type="text/javascript" charset="utf-8">
  Event.observe(window, 'load', function() {
    if ($('user_login') && $F('user_login') == "") {
      $('user_login').activate();
    }
    else {
      $('user_password').activate();
    }
  });
</script>
