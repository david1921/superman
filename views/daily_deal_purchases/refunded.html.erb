<% set_daily_deal_page_title_slug t(:refunded_vouchers) %>

<div class="page_row my_deals_page refunded">
  <div class="page_column_12 first rounded_corners daily_deal_purchases_list">
    <%= render :partial => "daily_deal_purchases/navigation" %>
    <h1 class="content"><%= t(:refunded_vouchers) %></h1>
    
    <% if @refunded_items.blank? %>
      <p><%= t('.no_refunded_vouchers_message') %></p>
    <% else %>
      <table id="<%= %Q(consumer_#{@consumer.id}_refunded_daily_deal_certificates) %>" class="daily_deal_purchase my_deals" cellspacing="0">
        <tr>
          <th class="description"><%= t(:description) %></th>
          <th class="serial_number"><%= t(:voucher_number) %></th>
          <th class="recipient"><%= t(:recipient) %></th>
          <th class="used_on"><%= t(:refunded_on) %></th>
          <th class="status"></th>
        </tr>
        <% @refunded_items.each do |refunded_item| %>
          <% case refunded_item %>
          <% when TravelsaversBooking %>
            <%= render(:partial => "refunded_travelsavers_booking", :object => refunded_item) %>
          <% when DailyDealCertificate %>
            <%= render(:partial => "refunded_voucher", :object => refunded_item) %>
          <% end %>
        <% end %>
      </table>
    <% end %>
  </div>
</div>

