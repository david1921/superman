<% case type
       when :facebook %>
    <% facebook_path = "/daily_deals/#{@daily_deal.id}/facebook?referral_code=#{current_consumer.try(:referrer_code)}" %>
    <a href="<%= facebook_path %>" class="share_link share_link_facebook" id="facebook_link" onclick="return facebook_popup('<%= facebook_path %>&popup=true')" target="_blank" title="Share coupon on Facebook"><span>Share this Daily Deal on Facebook!</span></a>
<% when :twitter %>
    <a href="<%= twitter_daily_deal_url(@daily_deal, :host => @publisher.daily_deal_host, :referral_code => current_consumer.try(:referrer_code)) %>" class="share_link share_link_twitter" target="_blank"><span>Share this Daily Deal on Twitter</span></a>
<% when :mailto %>
    <a href="mailto:?subject=<%= @daily_deal.publisher_prefix %>: <%= @daily_deal.value_proposition %>&amp;body=Check out this deal at <%= market_aware_daily_deal_url(@daily_deal, :referral_code => current_consumer.try(:referrer_code)) %>" class="share_link share_link_mail"><span>Email this Daily Deal to your Friends!</span></a>
<% end %>