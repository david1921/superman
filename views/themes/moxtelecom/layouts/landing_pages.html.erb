<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		<% if @daily_deal -%>
			<meta name="title" content="<%= @daily_deal.facebook_title %>" />
			<meta name="description" content="<%= "#{@daily_deal.advertiser.name} Daily Deal! #{@daily_deal.value_proposition}" %>" />
			<meta name='keywords' content="<%= "#{@daily_deal.advertiser.name}, #{@daily_deal.value_proposition}" %>">
			<link rel="image_src" href="<%= url_for_facebook_daily_deal_image @daily_deal %>" />
		<% else -%>
			<meta name="description" content="<%= "Daily Deal! Get the best daily deals with a new deal every single day!" %>">
			<meta name="keywords" content="Daily Deal! Hotel Deals, best deals, travel deals, vacation deals, restaurant deals">
		<% end -%>
		
		<!-- Stylesheets -->
		
		<link rel="stylesheet" href="/themes/moxtelecom/stylesheets/daily_deals.css" type="text/css" />
		<link rel="stylesheet" href="/themes/moxtelecom/stylesheets/moxtelecom.css" type="text/css" />

		<!--[if IE]>
			<link rel="stylesheet" href="/themes/moxtelecom/stylesheets/ie.css" type="text/css" />
		<![endif]-->

		<!--[if IE 7]>
			<link rel="stylesheet" href="/themes/moxtelecom/stylesheets/ie7.css" type="text/css" />
		<![endif]-->

		
		<!-- End Stylesheets -->
		
		<!-- Javascripts -->
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag '/themes/moxtelecom/javascript/jquery-1.3.2.min.js' %>
		<script type="text/javascript">
			 $.noConflict();
		</script>
		<%= javascript_include_tag '/themes/moxtelecom/javascript/jquery.fullscreenr.js'%>
		<script src="/themes/moxtelecom/javascript/cookies.js" type="text/javascript"></script>
		<!--[if (gte IE 6) & (lte IE 8)]>
   47: 		  <script type="text/javascript" src="/javascripts/selectivizr-min.js"></script>
   48  		<![endif]-->
		<%= raw render :partial => "/shared/tracking_google_analytics" %>

		<!-- End Javascripts -->
		
		<link rel="shortcut icon" href="/themes/moxtelecom/images/graphics/favicon.ico" type="image/x-icon" />
		<link rel="icon" href="/themes/moxtelecom/images/graphics/favicon.ico" type="image/x-icon">
		
		<title><%= daily_deal_page_title %></title>
	</head>
	<body id="landing_page">
		<div id="analog_analytics">

			<!--[if IE]>
				<img id="background" src="/themes/moxtelecom/images/backgrounds/main.png" />
			<![endif] -->
			<!--[if !IE]>-->
				<img id="background" src="/themes/moxtelecom/images/backgrounds/main.svg" />
			<!--<![endif]-->

			<!-- Analog Analytics Daily Deal -->
			<div id="daily_deal">
				

				<div id="dd_content">
					<%= raw render :partial => '/shared/flash', :locals => { :flash => flash } %>
					<%= yield %>
					<div class="clear"></div>
				</div> <!-- dd_content -->
				<%= render :partial => with_theme('shared/landing_footer') %>
			</div> <!-- daily_deal -->
			
		</div> <!-- analog_analytics -->
		
		<%= render :partial => with_theme('shared/tracking_publisher') %>
		<%= raw render :partial => 'daily_deals/javascript' %>
	</body>
</html>