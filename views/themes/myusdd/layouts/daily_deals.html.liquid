    <title>{% daily_deal_page_title %}</title>
{% include "shared/tracking_google_analytics" %}
</head>

<body>
    <div class="clear"></div><!--Analog_Analytics_Daily_Deal-->

    <div id="analog_analytics">
        <div id="daily_deal">
            <div id="banner">
                {% include with_theme "shared/account_nav" %}

                <div class="clear"></div>{% unless publisher.current_user_belongs_to? %}

                <div id="subscribe_form">
                    <h4 class="subscribe">SIGN UP FOR FREE DEAL ALERTS!</h4>

                    <form action="{{ publisher.subscribers_path }}" id="daily_deal_header" class="email_subscription_tracking" method="post" name="daily_deal_header">
                        <p><input name="subscriber[must_accept_terms]" value="true" type="hidden" /></p>

                        <p><input name="redirect_to" value="{{ publisher.todays_daily_deal_path | verifiable_url }}" type="hidden" /></p>

                        <p><input id="subscriber_email" name="subscriber[email]" size="30" type="text" value="Email Address" onclick="this.value='';" onfocus="this.select()" onblur="this.value=!this.value?'Email Address':this.value;" /></p>

                        <p><input id="subscribe_button" type="submit" value="Sign Up" /></p>

                        <p id="terms"><input name="subscriber[terms]" value="0" type="hidden" /> <input id="subscriber_terms" name="subscriber[terms]" value="1" type="checkbox" /> I agree to the &nbsp;<a href="#" onclick="window.open('{{ publisher.terms_path }}', '_blank'); return false; return false;" style="color:#fff;">Terms</a> and &nbsp;<a href="#" onclick="window.open('{{ publisher.privacy_path }}', '_blank'); return false; return false;" style="color:#fff;">Privacy Policy</a></p>
                    </form>
                </div><!-- /subscribe_form -->
                {% endunless %}
            </div><!--banner-->

            <div id="dd_content">
                {% include with_theme "shared/dd_nav" %} {% include "shared/flash" %} {{ content_for_layout }}

                <div class="clear"></div>
                {% include "shared/a_a_alt" %}

                <div id="american-saver-footer-logo">
                    <img src="/themes/{{ publisher.label }}/images/graphics/american-saver-footer-logo.png" width="686" height="37" alt="American Saver. Save time, Save Money, Have More Fun" />
                </div><!-- end #american-saver-footer-logo -->

                
            </div><!--dd_content-->
            <div id="dd_footer">
                <ul id="footer_nav">
                    <li><a href="{{ publisher.how_it_works_path }}">HOW IT WORKS</a></li><!-- <li><a href="">Past Deals</a></li> -->

                    <li><a href="{{ publisher.feature_your_business_path }}">FEATURE YOUR BUSINESS</a></li>

                    <li><a href="{{ publisher.faq_path }}">FAQ</a></li>

                    <li><a href="{{ publisher.login_path }}" class="{% if_page_name == 'daily_deal#login'%}current_page{%endif_page_name%}">SIGN UP</a></li>

                    <li><a href="{{ daily_deal.buy_now_path }}" name="buy_now_button" id="buy_now_button">BUY NOW</a></li>

                    <li class="last"><a href="{{ publisher.contact_path }}">CONTACT US</a></li>
                </ul><!-- /footer_nav -->

                <div class="clear"></div>
            </div><!-- /dd_footer -->
        </div><!--daily_deal-->
    </div><!--analog_analytics-->
    {% include with_theme "shared/tracking_publisher" %}
    {% include "daily_deals/javascript" %}
</body>
