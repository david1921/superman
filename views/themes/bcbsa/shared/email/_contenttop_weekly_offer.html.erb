<!--CONTENT TOP -->   
        <table width="648" border="0" cellspacing="0" cellpadding="0" align="center" bgcolor="#ffffff" style="font-family:Arial, Helvetica, sans-serif; color:#747474;font-size:14px;">
          <tr>
            <td valign="bottom" align="left" style="padding-left:20px;padding-bottom:10px;">
                <h1 style="font-family:Arial, Helvetica, sans-serif;font-size: 22px;font-weight:bold;color:#0094d0;margin:0;padding:0;"><%= t(:this_weeks_deals) %><img border="0" src="http://<%= @publisher.daily_deal_host %>/themes/bcbsa/images/email/icons/arrow.png" alt="" width="22" height="19" /></h1>
            </td>
			<td valign="bottom" align="right" style="padding-right: 20px;padding-bottom:10px;">
                <p style="font-family:Arial, Helvetica, sans-serif;font-size: 14px;font-weight:bold;color:#0094d0;margin:0;padding:0;"><%= Time.now.strftime("%B %e, %Y") %></p>
            </td>
		  </tr>
		  <tr>
			<td colspan="2" valign="top" align="center" bgcolor="#ecf2f6" style="background-color:#ecf2f6;">
                <img src="<%= @daily_deal.photo.url %>" width="648" height="280" alt="" />
            </td>
		  </tr>
		  <tr>
			<td colspan="2" valign="top" align="left">
                <table width="100%" align="center" border="0" cellspacing="0" cellpadding="20">
				  <tr>
					<td valign="top" align="left" style="padding-bottom: 0px;">
					 	<h2 style="font-family:Arial, Helvetica, sans-serif;font-size: 28px;line-height:30px;font-weight:bold;color:#464646;margin-top:0;margin-bottom:5px;padding:0;"><%= @daily_deal.advertiser.name %></h2>
						<h3 style="font-family:Arial, Helvetica, sans-serif;font-size: 20px;font-weight:normal;color:#464646;margin:0;padding:0;"><%= @daily_deal.value_proposition %></h3>
						<h4 style="font-family:Arial, Helvetica, sans-serif;font-size: 16px;font-weight:normal;color:#464646;margin:0;padding:0;"><em><%= t(:at) %> <% if @daily_deal.custom_2.present? %>
							<%= @daily_deal.custom_2 %></em>
    					<% else %>
    						<%= @advertiser.name %></em>
    					<% end %>	
    					</h4>
						<% unless @daily_deal.hide_at.blank? %>
                          <!-- Only purchase by date if occuring in next 100 days-->
                          <% if ((@daily_deal.hide_at - Time.now)/ 86400) < 150 %>
						      <h3 style="font-family:Arial, Helvetica, sans-serif;font-size: 16px;line-height:20px;font-weight:normal;color:#0094d0;margin:top:10px;margin-bottom:0;padding:0;"><%= t(:purchase_before) %> <%= @daily_deal.hide_at.strftime("%B %-d, %Y") %></h3>
                          <% end %>
						<% end %>
					</td>
					<td rowspan="2" align="right" valign="top"><a href="<%= add_params_to_email_link(market_aware_daily_deal_url(@daily_deal, params), @publisher.label) %>&cmpid=emailbuy"><img border="0" src="http://<%= @publisher.daily_deal_host %>/themes/bcbsa/images/email/buttons/<%= params[:locale] == "es-MX" ? 'see-deal-es.png' : 'see-deal.png' %>" alt="<%= t(:print_purchase_certificate) %>" width="100" height="36" /></a></td>
				  </tr>
				  <tr>
					<td valign="top" align="left" style="font-family:Arial, Helvetica, sans-serif;font-size:12px;line-height:15px;color:#464646;">
						<%= raw HtmlTruncator.truncate_html(@daily_deal.description, 340) %> <a style="color:#0094d0;text-decoration:none;"href="<%= add_params_to_email_link(market_aware_daily_deal_url(@daily_deal, params), @publisher.label) %>&cmpid=emailbuy"><%= t(:read_more) %></a>
				    </td>
				  </tr>
				</table>
            </td>
          </tr>
        </table>
<!--/CONTENT TOP -->  