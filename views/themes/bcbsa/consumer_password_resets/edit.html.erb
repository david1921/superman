<% set_daily_deal_page_title_slug t(:title_slug_change_password) %>

<div class="page_row">
  <div class="prefix_2 page_column_8 suffix_2 first rounded_corners">
    <h2><%= t('.change_password_header') %></h2>

    <% form_for [@publisher, @consumer], :url => publisher_consumer_password_reset_path, :method => :put, :html => { :style => 'padding-left: 21px' } do |f| -%>
      <%= f.error_messages(:header_message => t('.error_header_message')) %>

      <%= f.password_field_div :password, t(:new_password) %>
      <%= f.password_field_div :password_confirmation, t(:confirm_new_password)  %>

      <div class="buttons full_width">
        <%= submit_tag(t('.change_password'), :name => "change_password", :class => 'blue_button') %>
      </div>
    <% end -%>
  </div>
</div>

