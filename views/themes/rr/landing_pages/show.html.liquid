{% assign clazz = "" %}
{% if errors != empty %}
  {% assign clazz = "errors" %}
{% endif %}
<div id="landing_page" class="welcome {{clazz}}">
	{% include "shared/flash" %} 
	
	<div id="welcome_message">
	<h1>Welcome to <br /><span>Clicked<strong>In</strong></span></h1>
	<h2>Your <em>Local</em> Deal Finder</h2>
	</div>

	<div id="welcome_box">
		<form id="landing_welcome" action="{{ publishing_group.search_market_path }}" method="POST">
		<input type="hidden" name="authenticity_token" value="{% form_authenticity_token %}" />
		<input id="subscriber_email_required" name="subscriber[email_required]" type="hidden" value="true" />	
		<input id="subscriber_must_accept_terms" name="subscriber[must_accept_terms]" type="hidden" value="true" />		
		<input type="hidden" name="redirect_to" value="{{ publishing_group.landing_page_path | verifiable_url }}" />
		<input type="hidden" name="subscriber[zip_code]" value="{{ zip_code }}" />
			<fieldset>
				<input id="email" name="email" type="text" value="Email" onfocus="if (this.value=='Email') this.value=''; $('email').addClassName('focus')" onblur="if (this.value=='') this.value='Email'; $('email').removeClassName('focus')" />
				<input id="zip_code" name="zip_code" type="text" value="Zip Code" onfocus="if (this.value=='Zip Code') this.value=''; $('zip_code').addClassName('focus')" onblur="if (this.value=='Zip Code'; $('zip_code').removeClassName('focus')" />

				<input name="subscriber[terms]" value="0" type="hidden" />
				<input id="subscriber_terms" name="subscriber[terms]" value="1" type="checkbox" />
				<div id="landing_terms">I agree to the <a href="{{ publishing_group.popup_terms_path }}" class="lbOn">Terms</a> and <a href="{{ publishing_group.popup_privacy_policy_path }}" class="lbOn">Privacy Policy</a></div>
				<input id="submit_button" type="image" src="/themes/rr/images/buttons/save_now.png" value="Go" />		
			</fieldset>
		</form>
	</div>
</div>

