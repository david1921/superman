<!--Analog_Analytics_Daily_Deal-->

<div id="analog_analytics">
	<div id="daily_deal">
	
		<div id="banner">
			<a href="http://www.mylocalnumbers.com" id="homepage_link"></a>
			<div id="account_nav">
				{% include with_theme "shared/facebook_connect_liquid" %}
				{% if publisher.launched? %}
					{% if publisher.current_user_belongs_to? %}
				<a href="{{ publisher.my_account_path }}">My Account</a>
				<a href="{{ publisher.my_deals_path }}">My Deals</a>
				<a class="last" href="{{ publisher.logout_path }}">Sign Out</a>
					{% else %}
				<a class="last" href="{{ publisher.login_path }}">Sign In</a>
					{% endif %}
				{% endif %}
			</div>
			<div id="subscribe_form"><p class="subscribe">ENTER YOUR EMAIL FOR DEAL ALERTS!</p>
				<form action="/publishers/{{ publisher.id }}/subscribers" id="daily_deal_header" class="email_subscription_tracking" method="post">
					<p><input name="subscriber[must_accept_terms]" value="true" type="hidden" /></p>
					<p><input name="redirect_to" value="{{ publisher.todays_daily_deal_path}}" type="hidden" /></p>
					<p><input id="subscriber_email" name="subscriber[email]" size="30" class="ghostie" type="text" value="Email Address" title="Email Address" /><input id="subscriber_zip_code" name="subscriber[zip_code]" size="10" class="ghostie" type="text" value="Zip Code" title="Zip Code" /></p>
					<p><input id="subscribe_button" src="/themes/mylocalnumbers/images/buttons/sign_up.png" type="image" /> <input id="subscriber_terms" name="subscriber[terms]" value="1" type="checkbox" /> I agree to the &nbsp;<a href="#" onclick="window.open('{{ publisher.terms_path }}', '_blank'); return false; return false;" style="color:#000;">Terms</a> and &nbsp;<a href="#" onclick="window.open('{{ publisher.privacy_path }}', '_blank'); return false; return false;" style="color:#000;">Privacy Policy</a></p>
				</form>
			</div>
		</div><!--banner-->   
		 
		<div id="dd_content">
			<div id="dd_nav">
				<a href="{{ publisher.todays_daily_deal_path }}">Today's Deal</a> 
				<a href="{{ publisher.contact_path }}">Contact Us</a>
				<a href="{{ publisher.faq_path }}">FAQ's</a>
				<a href="{{ publisher.how_it_works_path }}">How it Works</a>
				<a href="{{ publisher.feature_your_business_path }}" class="last">Feature Your Business</a>

			</div><!-- /dd_nav -->
	       	 
		    {% include "shared/flash" %}
		    {{ content_for_layout }}
		
		</div><!--dd_content-->
		<div class="clear"></div>
		{% include "shared/a_a_alt" %}
		
		<div class="clear"></div>
	</div><!--daily_deal-->
