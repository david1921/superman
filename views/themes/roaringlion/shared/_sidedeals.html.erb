<% if @daily_deal.side_deals.size > 0 %>
	<div id="side_deals" class="content_box three_col other_deal_tracking">
			<h4>Other Great Deals</h4>
			<% @daily_deal.side_deals[0,3].each do |deal| %>
				<div class="side_deal_wrap">
					<p class="side_deal_value_prop"><a class="side_deal" href="<%= market_aware_daily_deal_url(deal) %>" target="_blank"><%= deal.value_proposition %></a></p>
					<div class="side_deal_text">
						<div class="side_deal_price<%= " variation" if !deal.daily_deal_variations.blank? %>"><% if !deal.daily_deal_variations.blank? -%><span class="variation">From</span><br /><% end %><%= formatted_price_for(deal.price_to_display) %></div>

						<p class="side_deal_value"><%= formatted_price_for(deal.value_to_display) %> VALUE</p>
						
					</div><!-- /side_deal_text -->
					<div class="side_deal_thumb">
						<img src="<%= deal.photo.url(:facebook) %>" alt="" />
					</div>
					<div class="clear"></div>
					<a class="view_deal button gradient" href="<%= market_aware_daily_deal_url(deal) %>" target="_blank">View Deal</a>
					<div class="clear"></div>
				</div><!-- /side_deal_wrap -->
			<% end %>
	</div><!-- /side_deals -->
<% end %>
