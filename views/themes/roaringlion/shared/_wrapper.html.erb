<div id="analog_analytics">
	<div id="daily_deal">
		<div id="header">
			<div id="banner">
				  <%= render :partial => with_theme("shared/publisher_logo") %>

				<ul id="account_nav">			
	    			<li class="facebook_connect" style="display:none"><a href="<%= auth_init_path(@publisher) if facebook_configured? %>" title="Log in with your facebook account"><img alt="Facebook Connect" src="/images/buttons/facebook_connect.png" /></a></li>
					<% if @publisher.launched? %>
						<% if controller.send(:consumer_for_publisher?, @publisher) %>
							<li><a href="<%= edit_publisher_consumer_path(@publisher, current_consumer) %>">My Account</a></li>
							<li><a href="<%= publisher_consumer_daily_deal_purchases_path(@publisher, current_consumer) %>">My Deals</a></li>
							<li class="last"><a href="<%= daily_deal_logout_path(@publisher) %>">Sign Out</a></li>
						<% else %>
							<li class="last"><a href="<%= daily_deal_login_path(@publisher) %>">Sign In</a></li>
						<% end %>
					<% end %>
				</ul><!-- /account_nav -->
				<div class="clear"></div>
				<div id="subscribe_form">
					<h4 class="subscribe">GET FREE DEAL OF THE DAY ALERTS!</h4>
					<form action="/publishers/<%= @publisher.id %>/subscribers" id="daily_deal_header" class="email_subscription_tracking" method="post">
						<p><input name="subscriber[must_accept_terms]" value="true" type="hidden" /></p>
						<p><input name="redirect_to" value="<%= verifiable_url(public_deal_of_day_path(@publisher.label)) %>" type="hidden" /></p>
						<p><input id="subscriber_email" name="subscriber[email]" size="30" type="text" value="Email Address" onclick="this.value='';" /></p>
						<p><input id="subscribe_button" type="submit" value="sign up" /></p>
						<p id="terms"><input name="subscriber[terms]" value="0" type="hidden" />
							<input id="subscriber_terms" name="subscriber[terms]" value="1" type="checkbox" /> I agree to the &nbsp;<a href="#" onclick="window.open('<%= terms_publisher_daily_deals_path(@publisher) %>', '_blank'); return false; return false;" style="color:#fff;">Terms</a> and &nbsp;<a href="#" onclick="window.open('<%= privacy_policy_publisher_daily_deals_path(@publisher) %>', '_blank'); return false; return false;" style="color:#fff;">Privacy Policy</a>
						</p>
					</form>
				</div>
			</div><!--banner-->   
		</div><!-- /header -->

    <%= render :partial => "shared/flash_messages" %>
		 
		<div id="page_content">
      		
      		<%= render :partial => with_theme("shared/tabs") %>	
      		<div class="clear"></div>	
		</div><!--page_content-->
		
		<%= raw render :partial => 'shared/a_a_alt' %>
		
	</div><!--daily_deal-->
	<div class="push"></div>
</div><!--analog_analytics-->
<%= render :partial => with_theme("shared/footer") %>
