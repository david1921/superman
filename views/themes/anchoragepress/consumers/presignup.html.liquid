    <div class="box">
        <img src="/themes/anchoragepress/images/display/sign-up-head.png" width="267" height="47" alt="Sign-Up" />
        <form action="/publishers/{{ publisher.id }}/consumers" class="email_subscription_tracking" method="post" id="optin">
          <input type="hidden" name="consumer[agree_to_terms]" value="true" />
