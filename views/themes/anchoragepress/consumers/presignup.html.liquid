            <div><label>Password* :</label><input name="consumer[password]" type="password" /></div>
            <div><label>Confirm Password* :</label><input name="consumer[password_confirmation]" type="password" /></div>
            <div><label>Age:</label><input name="consumers[age]" type="text" /></div>
            <div><label>Gender:</label>M<input class="radio" name="consumer[gender]" type="radio" value="M" />&nbsp;F<input class="radio" name="consumer[gender]" type="radio" value="F" /></div>
            <div><label>ZIP Code:</label><input name="consumer[zip_code]" type="text" /></div>
			<div><input name="sign_up" value="Sign Up" type="image" class="signup" src="/themes/anchoragepress/images/buttons/sign-up.png" /></div>
