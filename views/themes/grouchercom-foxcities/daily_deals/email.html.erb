							<td align="center" style="padding: 0;">
								<table width="600" cellspacing="0" cellpadding="0">
									<tr valign="top">
										<td style="width: 390px;">
											&nbsp;
										</td>
										<td style="line-height: 0;">
											<%= image_tag("http://#{@daily_deal.publisher.daily_deal_host}/themes/#{@publisher.label}/images/graphics/email_featured_deal_bottom.png", :alt => "Featured Deal", :border => 0, :style => 'position: relative; top: -1px;') %>
										</td>
									</tr>
								</table>
							</td>
						</tr>
					</table>
