								<table width="598" cellspacing="0" cellpadding="0" style="font: 14px/20px helvetica, arial, sans-serif;">
									<tr valign="top">
										<td width="427" style="padding: 0 0 0 15px;">
											<img src="<%= @daily_deal.photo.url(:portrait) %>" alt="<%= @advertiser.name %>" width="412" />
