																					<a href="{{ daily_deal.twitter_url }}" style="color: #ffffff;padding-right:20px;"><img src="http://{{ publisher.daily_deal_host }}/themes/novadog/images/buttons/twitter.png" height="41" alt="Twitter" style="border: none;" width="41" /></a> 
																					<a href="mailto:?subject={{ daily_deal.publisher_prefix }}: {{ daily_deal.value_proposition }}&amp;body=Check out this deal at {{ daily_deal.url }}" style="color: #ffffff;"><img src="http://{{ publisher.daily_deal_host }}/themes/novadog/images/buttons/email.png" height="41" alt="Email" style="border: none;" width="41" /></a>
												    							</td>
												    						</tr>
						    												
						    											</table><!-- /dashboard -->
						    										</td>
						    									</tr>    									
						    								</table><!-- /photo and dashboard -->
						    							</td>
						    						</tr>
			    								</table><!-- /value photo and dashboard -->
			    							</td>
    									</tr>
    									
			    						<tr>
			    							<td style="padding:10px;">&nbsp;</td>
			    						</tr>
			    						<tr>
			    							<td style="background-color: #ffffff; border: 3px solid #6B4635;padding:0;width:560px;" width="560">
