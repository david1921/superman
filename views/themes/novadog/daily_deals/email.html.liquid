    						</tr>
    						<tr>
    							<td style="color:#00808e;font-family: Helvetica, sans-serif; height:28px; text-align:center;">{{ "now" | date: "%A, %B %e, %Y" }}</td>
    						</tr>
    						<tr>
    							<td>
    								<table cellpadding="0" cellspacing="0" border="0" width="560" align="center"><!-- deal wrapper -->
