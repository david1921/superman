<% set_daily_deal_page_title_slug t :contact_us %>

<div class="page_row">
  <div class="page_column_12 first rounded_corners">
    <div id="dd_nav" style="margin-left:-10px;margin-right:-10px;margin-bottom:15px;">
			<%= raw render :partial => with_theme("shared/dd_nav")%>
		</div><!-- END #dd_nav --> 
    <h1><%=t :contact_us %></h1>

    <h4>Does your business want to be a featured deal? <a href="<%= feature_your_business_publisher_daily_deals_path(@publisher) %>">Click here</a> to become a deal.</h4>
    
    <h3 class="main_office">Mailing Address</h3>
    <p>
      <%= "#{@publisher.address_line_1}<br/>".html_safe unless @publisher.address_line_1.blank? %>
      <%= "#{@publisher.address_line_2}<br/>".html_safe unless @publisher.address_line_2.blank? %>
      <%= "#{@publisher.city}, #{@publisher.state} #{@publisher.zip}<br/>".html_safe unless @publisher.city.blank? %>
    </p>

    <% unless @publisher.support_email_address.blank? %>
    <h2 style="margin-top: 18px;"><%= t '.support_header' %></h2>
    <p>
      <% if @publisher.support_phone_number.present? %>
        <%=raw(t('.support_message',
            :email_link => link_to(@publisher.support_email_address, "mailto:#{@publisher.support_email_address}", :target => "_blank"),
            :support_phone_number => @publisher.formatted_support_phone_number)) %>
      <% else %>
        <%=raw(t('.support_message_without_support_number',
            :email_link => link_to(@publisher.support_email_address, "mailto:#{@publisher.support_email_address}", :target => "_blank"))) %>
      <% end %>
    </p>
    <% end %>
    
    <% unless @publisher.sales_email_address.blank? %>
      <h2 style="margin-top: 18px;"><%= t '.feature_business_header' %></h2>
      <%=raw(t('.feature_business_message',
          :email_link => link_to(@publisher.sales_email_address, "mailto:#{@publisher.sales_email_address}", :target => "_blank"))) %>
    <% end %>
  </div>
</div>
