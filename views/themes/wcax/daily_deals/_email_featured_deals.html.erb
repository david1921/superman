<table width="270" style="background-color:white; margin-left: 17px;" border="0" cellspacing="0" cellpadding="0">
	<tr>
		<td colspan="2">
			<%= image_tag("http://#{daily_deal.publisher.daily_deal_host}/themes/wcax/images/graphics/middle_rounded_top.png", :style => "display:block;", :alt => "Middle rounded corners top", :border => 0, :height => 20, :width => 280) %>
		</td>
 	</tr>
</table>
<table align="center" style="background-color:white;" border="0" cellspacing="0" cellpadding="0">
    <tr>
		<td>
			<table style="background-color:white;" border="0" cellspacing="0" cellpadding="0">
				<tr valign="top">
					<td style="padding-right: 33px;">
						<%= image_tag("http://#{daily_deal.publisher.daily_deal_host}/themes/wcax/images/graphics/logo_tag_left.png", :style => "display:block;", :alt => "Logo Banner Right", :border => 0, :width => 35) %>
					</td>
					<td align="center" style="padding-bottom: 10px;">
						<%= image_tag(daily_deal.publisher.logo.url(:normal), :style => "display:block;", :alt => "Small Logo", :border => 0, :height => 70, :width => 180) %>
					</td>
					<td style="padding-left: 33px;">
						<%= image_tag("http://#{daily_deal.publisher.daily_deal_host}/themes/wcax/images/graphics/logo_tag_right.png", :style => "display:block;", :alt => "Logo Banner Right", :border => 0, :width => 35) %>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>
<table width="280" style="background-color:white; margin-left: 17px;" border="0" cellspacing="0" cellpadding="0">
	<tr>
		<td colspan="3" style="border-left:1px solid #666;border-right:1px solid #666; font-weight: bold;padding-bottom: 10px; padding-left:15px;">
			<%= daily_deal.value_proposition %>  
		</td>
	</tr>
	<tr>
		<td align="center" style="border-left:1px solid #666;border-right:1px solid #666; font-weight: bold;padding-bottom: 10px;">
			<a href="<%= daily_deal_url(daily_deal) %>"><%= image_tag(daily_deal.photo.url(:portrait), :style => "border: 1px solid #666;vertical-align: text-bottom;", :alt => "Photo", :border => 0, :width => 260) %></a>
		</td>
	</tr>
</table>
<table width="297" style="background-color:white; border-right: 1px solid #666;" border="0" cellspacing="0" cellpadding="0">
	<tr>
		<td>
			<!-- First Middle Buy Tag -->
			<%= render :partial => with_theme("daily_deals/#{daily_deal.publisher.label.gsub('wcax-','')}_buy_tag_middle"), :locals => { :daily_deal => daily_deal, :publisher => daily_deal.publisher } %>
			<!-- End First Middle Buy -->
		</td>
	</tr>
</table>
<!-- Deal Specs -->
<table width="280" border="0" cellspacing="0" cellpadding="0" style="border-left: 1px solid #666; border-right: 1px solid #666; margin-left: 17px;">
	<tr>
		<td align="center" style="margin: 0; padding: 0;">
			<%= image_tag("http://#{daily_deal.publisher.daily_deal_host}/themes/wcax/images/graphics/rounded_specs_top.png", :style => "display:block;margin: 0; padding: 0;", :alt => "Jump On It", :border => 0, :height => 11, :width => 192) %>
		</td>
	</tr>
	<tr>
		<td>
			<table align="center" border="0" cellspacing="0" cellpadding="0" style="border-left:1px solid #aae4fc; border-right: 1px solid #aae4fc; background-color:#ddf0fe;width:192px;">
				<tr>
					<td align="center" style="color: #3f565e;font-size: 12px;border-right:1px solid #aae4fc;padding-left:5px;">
						Value <br />
						<strong style="font-size:20px"><%= number_to_currency(daily_deal.value, :precision => 0)%></strong>
					</td>
					<td align="center" style="color: #3f565e;font-size: 12px; border-left: 1px solid #f2fafc;border-right:1px solid #aae4fc;">
						Discount <br />
						<strong style="font-size:20px"><%= number_to_percentage(100 * (daily_deal.value_to_display.to_i - daily_deal.price_to_display) / daily_deal.value_to_display, :precision => 0) %></strong>
					</td>
					<td align="center" style=" border-left: 1px solid #f2fafc; color: #3f565e;font-size: 12px">
						You Save <br />
						<strong style="font-size:20px"><%= number_to_currency(daily_deal.savings_to_display, :precision => 0)%></strong>
					</td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td align="center" style="padding-bottom:15px;">
			<%= image_tag("http://#{daily_deal.publisher.daily_deal_host}/themes/wcax/images/graphics/rounded_specs_bottom.png", :style => "display:block;", :alt => "Jump On It", :border => 0, :height => 11, :width => 192) %>
		</td>
	</tr>
</table><!-- End Deal Specs -->
<table width="280" style="background-color:white; margin-left: 17px;" border="0" cellspacing="0" cellpadding="0">
	<tr>
		<td>
			<%= image_tag("http://#{daily_deal.publisher.daily_deal_host}/themes/wcax/images/graphics/middle_rounded_bottom.png", :style => "display:block;", :alt => "Middle rounded corners bottom", :border => 0, :height => 20, :width => 280) %>
		</td>
	</tr>
</table>
