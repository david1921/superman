<% set_daily_deal_page_title_slug t(:expired_vouchers) %>
<% expired_off_platform_certificates = @consumer.off_platform_daily_deal_certificates.find(:all, :conditions => ['redeemed = ? AND expires_on < ?', false, Time.zone.now], :order => 'id ASC') %>
<div class="page_row my_deals_page expired">
  <div class="page_column_12 first rounded_corners daily_deal_purchases_list">
    <div id="dd_nav" style="margin-left:-10px;margin-right:-10px;margin-bottom:15px;">
      <%= raw render :partial => with_theme("shared/dd_nav")%>
    </div><!-- END #dd_nav --> 
    <%= render :partial => "daily_deal_purchases/navigation" %>
    <h1 class="content"><%= t(:expired_vouchers) %></h1>
    
    <% if @expired_certificates.blank? and expired_off_platform_certificates.blank? %>
      <p><%= t('.no_expired_vouchers_message') %></p>
    <% else %>
      <div class="mydeals_unoptimized">
      <table id="<%= %Q(consumer_#{@consumer.id}_expired_daily_deal_certificates) %>" class="daily_deal_certificate my_deals" cellspacing="0">
        <tr>
          <th class="description"><%= t(:description) %></th>
          <th class="advertiser"><%= t(:advertiser) %></th>
          <th class="serial_number"><%= t(:voucher_number) %></th>
          <th class="recipient"><%= t(:recipient) %></th>
          <th class="used_on"><%= t(:expired_on) %></th>
          <th class="status">&nbsp;</th>
        </tr>
        <%= render(:partial => with_theme("expired_voucher"), :collection => @expired_certificates) %>
        <%= render(:partial => with_theme("expired_off_platform_certificate"), :collection => expired_off_platform_certificates) %>
      </table>
    </div>
    <% end %>
  </div>
</div>
