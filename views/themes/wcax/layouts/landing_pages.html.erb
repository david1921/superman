		<script src="/javascripts/dragdrop.js" type="text/javascript"></script>
		<script src="/javascripts/controls.js" type="text/javascript"></script>
		<script src="/javascripts/application.js" type="text/javascript"></script>
		<script src="/themes/wcax/javascripts/modernizr-2.0.6.js" type="text/javascript"></script>
		<%= raw render :partial => with_theme("daily_deals/custom_stylesheet_includes") %> <title><%= daily_deal_page_title %></title>
		<%= raw render :partial => "shared/tracking_google_analytics" %>

		<%= yield :head %>
	</head>
	<body class="landing_page">
		<div id="container">
			<div class="wrap">
				<div id="main">
					<div id="home-top">
						<!--Analog_Analytics_Daily_Deal-->
						<div id="analog_analytics">
							<div id="daily_deal">
								<div id="dd_content">
									<%= render :partial => with_theme("shared/flash_messages") %>
									<%= raw yield %> <div class="clear"></div>
								</div><!--dd_content-->
							</div><!--daily_deal-->
						</div><!--analog_analytics-->
					</div><!-- end home-top -->
				</div>
				<!-- ::: End Main ::: -->
				<%= raw render :partial => 'shared/a_a_alt' %>
			</div><!-- end wrap -->
		</div>
		<%= raw render :partial => with_theme("shared/tracking_publisher") %>
		<%= raw render :partial => "daily_deals/javascript" %> <script type="text/javascript" src="/themes/wcax/javascripts/custom.js"></script>
		<!-- equal height grids -->
		<script type="text/javascript">
						jQuery(document).ready(function($){
			function equalGrids(group) {
			   var tallest = 0;
			   group.each(function() {
				   var thisHeight = $(this).height();
				   if(thisHeight > tallest) {
					   tallest = thisHeight;
				   }
			   });
			   group.height(tallest);
			}

			equalGrids($(".market_subscription_box"));
			});</script>
		<script type="text/javascript">
			jQuery(document).ready(function() {
				var vermontBox = jQuery("#landing_box_vermont .landing_slider_box").height();
				var vermontNew = Math.abs(vermontBox) * -1 + 20;
				jQuery("#landing_box_vermont .landing_slider_box").css({
					"bottom" : vermontNew
				});
				jQuery("#landing_box_vermont .landing_slider_box").hover(function() {
					jQuery(this).stop().animate({
						"bottom" : "0px"
					}, 300, 'swing')
				}, function() {
					jQuery(this).stop().animate({
						"bottom" : vermontNew
					}, 200, 'swing')
				});
				var adironBox = jQuery("#landing_box_adirondacks .landing_slider_box").height();
				var adironNew = Math.abs(adironBox) * -1 + 20;
				jQuery("#landing_box_adirondacks .landing_slider_box").css({
