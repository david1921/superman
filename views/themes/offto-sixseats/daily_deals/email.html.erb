		<table style="border-spacing: 0; font: 14px/20px helvetica, arial, sans-serif; color: #4a4a4a; width: 638px;" align="center">
			<tr>
				<td>
					<%= image_tag("http://#{@daily_deal.publisher.daily_deal_host}/themes/#{@publisher.label}/images/graphics/email_banner.png", :alt => "Deal of the Day") %>
				</td>
				<td style="color: #46951d; text-align: right;">
					<p style="font-size: 20px"><%= @time.strftime("%A, %B %e, %Y")%></p>
					<p style="display: inline; line-height: 30px; vertical-align: top;">
						Follow Us: 
						<a style="display: inline-block;" href="#" target="_blank" title="Share coupon on Facebook"><%= image_tag("http://#{@daily_deal.publisher.daily_deal_host}/themes/offto-sixseats/images/buttons/email_alt_facebook.png", :alt => "Facebook", :border => '0') %></a>
						<a style="display: inline-block;" href="#" target="_blank"><%= image_tag("http://#{@daily_deal.publisher.daily_deal_host}/themes/offto-sixseats/images/buttons/email_alt_twitter.png", :alt => "Twitter", :border => '0') %></a>
					</p>
				</td>
			</tr>
			<tr style="background: #46951d;">
