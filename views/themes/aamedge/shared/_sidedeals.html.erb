<% if @daily_deal.side_deals.size > 0 %>
<h4>Other Great Deals
 	<% if @publisher.allow_all_deals_page %>
	<a href="<%= daily_deals_public_index_path(@publisher.label) %>?per_page=12" class="button gradient all_deals_tracking <%= "#{controller_name}##{action_name}" == "daily_deals#public_index" ? 'current_page' : nil %>">View All<span></span></a>
	<% end %>
</h4>
	
	       
<div id="side_deals" class="content_box other_deal_tracking">
	<% @daily_deal.side_deals[0,2].each do |side_deal| %>
	<div class="side_deal_wrap<%= ' variation' if !side_deal.daily_deal_variations.blank? %>">
		<p class="side_deal_value_prop"><a class="side_deal" href="<%= side_deal.url_for_bit_ly -%>" target="_blank"><%= side_deal.value_proposition %></a></p>
		<div class="side_deal_text">
			<div class="side_deal_price"><%if !side_deal.daily_deal_variations.blank? %><em>From</em><% end %><%= formatted_price_for(side_deal.price_to_display, side_deal.currency_symbol) %></div>
			<p class="side_deal_value"><%= formatted_price_for(side_deal.value_to_display, side_deal.currency_symbol) %> VALUE</p>
			<a class="view_deal button gradient" href="<%= daily_deal_path(side_deal) %>">View Deal</a>
		</div><!-- /side_deal_text -->
		<div class="side_deal_thumb">
			<img src="<%= side_deal.photo.url(:facebook) %>" alt="" />
		</div>
		<div class="clear"></div>
	</div><!-- /side_deal_wrap -->
	<% end -%>
</div><!-- /side_deals -->
<% end %> 