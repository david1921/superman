<div id="main_column">
	<div class="daily_deal_box"><!-- deal info top row -->
		<div id="daily_deal_header">
			<h1 id="daily_deal_value_prop"><%= @daily_deal.value_proposition %></h1>
			<h2 id="daily_deal_value_prop_subhead"><%= @daily_deal.value_proposition_subhead %></h2>
		</div><!-- end daily_deal_header -->
		<div id="deal_photo">
			<img src="<%= @daily_deal.photo.url(:standard) %>" alt="<%= @daily_deal.advertiser.name %>" />
		</div><!-- end deal_photo -->
		<div id="dashboard"><!--dashboard -->
			<div id="price_tag">
				<p id="daily_deal_price"><span id="price-name">Price:</span> <%= number_to_currency @daily_deal.value.to_i %></p>
			</div><!-- end price_tag -->
			<div id="buy_now">
				<% if @daily_deal.sold_out? -%>
				<div id="sold_out" class="dd_button sold_out gradient">
						<span>Sold Out</span>
				</div><!-- end sold_out -->
				<% elsif @daily_deal.over? -%>
				
				<div id="deal_over" class="dd_button deal_over gradient">
						<span>Deal Over</span>
				</div><!-- end deal_over -->
				
				<% elsif @daily_deal.active? -%>
				<div id="deal_buy_now" class="buy-button">
						<a href="<%= new_daily_deal_daily_deal_purchase_path(@daily_deal) %>" name="buy_now_button"><span>Buy!</span></a>
				</div><!-- end deal_buy_now -->
				<div id="deal_over" class="dd_button unavailable" style="display:none;">
						<span>Deal Over</span>
				</div><!-- end deal_over -->
				
				<% else -%>
				<div id="not_yet" class="dd_button">
						<span>Not Yet Available</span>
				</div><!-- end not_yet -->
				<% end -%>
			</div><!-- /buy_now -->
			<div id="deal_specs">
				<div id="value_summary" class="deal_spec_box">
					<p class="spec-title">Value</p>
					<p class="spec-value"><%= number_to_currency @daily_deal.value.to_i, :precision => 0 %></p>
				</div><!-- end value_summary -->
				<div id="discount_summary" class="deal_spec_box">
					<p class="spec-title">Discount</p>
					<p class="spec-value"><%= number_to_percentage(@daily_deal.savings_as_percentage, :precision => 0) %></p>
				</div><!-- end discount_summary -->
				<div id="saving_summary" class="deal_spec_box">
					<p class="spec-title">You Save</p>
					<p class="spec-value"><%= number_to_currency @daily_deal.savings, :precision => 0 %></p>
				</div><!-- end saving_summary -->	
		   </div><!-- /deal_specs -->
				<div id="buy_for_friend">
				<% if @daily_deal.active? -%>
					 <div id="buy_for_friend_inner">
			   		<a href="<%= new_daily_deal_daily_deal_purchase_path(@daily_deal) %>"><h4>Buy it for a Friend</h4></a>
			     </div><!-- end buy_for_friend_inner -->
			  <% else -%>  
			     <div id="buy_for_friend_inner">
			   		<h4>Buy it for a Friend</h4>
			     </div><!-- end buy_for_friend_inner -->
			  <% end -%>
		   </div><!-- end buy_for_friend -->  		  
			 <img id="timer-clock-graphic" src="/themes/cyd/images/graphics/dashboard-clock.png" alt="Claim Your Deal, Deal Time Left">
			 <div id="deal_timer_box">
			   <p id="time_left_to_buy_label">Time Left to Buy</p>
				 <p id="time_left_to_buy"><%= @daily_deal.time_remaining_display %></p>
		   </div><!-- end deal_timer_box -->

		</div><!-- /dashboard -->
	</div><!-- .daily_deal_box -->
	<%= render :partial => with_theme("shared/deal_tab_content") %>
</div><!-- /main_column -->
<div id="sidebar">
	<%= render :partial => with_theme("shared/subscribe") %>
	<%= render :partial => with_theme("shared/refer_friend") %>
	<%= render :partial => with_theme("shared/side_deal") %>
	<%= render :partial => with_theme("shared/facebook_box") %>
</div><!-- /sidebar -->