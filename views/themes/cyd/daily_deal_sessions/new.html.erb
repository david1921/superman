<% set_daily_deal_page_title_slug "Sign In" %>

<div class="page_row">
  <div class="page_column_12 first sign_up rounded_corners signin">
    <h2 class="sign-in">Sign In</h2>
    <p class="sign-in-p">Please sign in or <%= link_to("Create an account", new_publisher_consumer_path(@publisher)) %></p>

    <p class="sign-in-p">Forgot your password? <%= link_to "Reset your password", consumer_password_reset_path_or_url(@publisher) %></p>

    <div id="login_form">
      <% form_for :session, :url => { :action => :create } do |f| -%>
        <%= f.text_field_div :email %>
        <%= f.password_field_div :password %>
        <%= f.check_box_div :remember_me_flag, "Remember me" %>

        <div class="row button_row">
          <%= submit_tag "Sign In", :name => "sign_in", :id => "sign_in_button" %> <%= daily_deal_cancel_link(@publisher) %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  Event.observe(window, 'load', function() {
    if ($('session_email') && $F('session_email') == "") {
      $('session_email').activate();
    }
    else {
      $('session_password').activate();
    }
  });
</script>

