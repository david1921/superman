{% if daily_deal %}
  <meta name="title" content="{{ daily_deal.facebook_title }}" />
  <meta name="description" content="{{ daily_deal.facebook_description }}" />
  <meta name="keywords" content="{{ advertiser.name }}, {{ daily_deal.value_proposition }}, NY Deal of the Day, Today's Deal, Daily Deal, Restaurants, Spas, Events, New York Daily News, Savings, 50-90%, Offerings, Discounts, Share Deal, Offerings, Subscriber, Facebook, NYC, Queens, Brooklyn, Staten Island, Bronx, Long Island, Manhattan, Discount, Savings, Voucher" />
  <link rel="image_src" href="{{ daily_deal.facebook_daily_deal_image_url }}" />
  {% else %}
  <meta name="description" content="Daily Deal! Get the best daily deals with a new deal every single day!" />
  <meta name="keywords" content="NY Deal of the Day, Today's Deal, Daily Deal, Restaurants, Spas, Events, New York Daily News, Savings, 50-90%, Offerings, Discounts, Share Deal, Offerings, Subscriber, Facebook, NYC, Queens, Brooklyn, Staten Island, Bronx, Long Island, Manhattan, Discount, Savings, Voucher" />
{% endif %}
  
  <title>{% daily_deal_page_title %}</title>
{% include "shared/tracking_google_analytics" %}
</head>

<body>
{% include with_theme "shared/header" %}

<div class="clear"></div>
<!--Analog_Analytics_Daily_Deal-->


<div id="analog_analytics">
  <div id="daily_deal">
    {% include "shared/flash" %}
    <div id="banner">
      <a href="{{ publisher.todays_daily_deal_path }}" class="left"><img src="/themes/nydailynews/images/graphics/dealoftheday_logo.png" alt="NYDN Deal of the Day" width="429" height="59" /></a> 
      {% if publisher.enable_daily_deal_referral %}
      <a href="{{ publisher.refer_a_friend_path }}" class="right refer_a_friend_tracking"><img src="/themes/nydailynews/images/buttons/refer_a_friend.png" alt="Get $10 Refer a Friend" width="223" height="74" /></a>
      {% endif %}
      
  
    </div><!--banner-->   
     
    <div id="dd_content">
      {% include with_theme "shared/dd_nav" %}
    
      <div>
      <div class="clear"></div>
      <div id="main_column">
      
        
        {{ content_for_layout }}
        
      </div><!-- /main_column -->
      
		{% page_context_is daily_deals %}
	      <div id="sidebar">
	        
	        {% include with_theme "shared/sidebar" %}     
	        
	      </div><!-- /sidebar -->
		{% endpage_context_is %}

      
      </div>

        <div class="clear"></div>
        
    </div><!--dd_content-->
    
    <div id="dd_footer">
      {% include with_theme "shared/dd_footer" %}
    </div><!-- /dd_footer -->
  </div><!--daily_deal-->
</div><!--analog_analytics-->


{% include with_theme "shared/tracking_publisher" %}
{% include "daily_deals/javascript" %}
