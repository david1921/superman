{% endcomment %}
<script src="/themes/thomsonlocal/javascripts/jspostcode.js" type="text/javascript"></script> 
<script>
$("subscriber_email").focus();

Event.observe('new_subscriber', 'submit', function(event) {
  if (!checkPostCode($('subscriber_zip_code').value)) {
    $('flash_warn').innerHTML = 'Invalid UK postal code';
    Element.show('flash_warn');
    $('flash_warn').scrollTo();
    Event.stop(event);
  }
});
</script>
