<% set_daily_deal_page_title_slug "Password Reset Email" %>

<div class="page_row">
  <div class="prefix_2 page_column_8 suffix_2 first rounded_corners">
    <h2>Check your email!</h2>

    <p>Please check your email for a message from <%= @publisher.brand_name_or_name %> and click the link inside to reset your password.</p>

    <p class="small">If you didn't receive the email, please check your spam folder. If you still haven't received your email, please enter your email address again and we'll send you another one.</p>

    <% form_tag publisher_consumer_password_resets_path(@publisher) do -%>
      <div class="row">
        <div class="label"><%= label_tag(:email) %></div>
        <div class="input"><%= text_field_tag(:email) %></div>
      </div>
      <div class="full_width buttons">
        <%= submit_tag("Resend Email", :name => "resend_email") %>
      </div>
    <% end %>
  </div>
</div>
