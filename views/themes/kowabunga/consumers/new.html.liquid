<div class="page_row">
  <div class="prefix_2 page_column_8 suffix_2 first rounded_corners">
    {% if consumer.full_error_messages != empty %}
    <div class="warn" id="flash_warn">
      <ul>
        {% for msg in consumer.full_error_messages %}
          <li>{{ msg }}</li>
        {% endfor %}
      </ul>
    </div><!-- end #flash_warn -->
    {% endif %}
		<h2>Create your Kowabunga account now!</h2>
		
			<form id="signup" action="{{ publisher.consumers_path }}" class="email_subscription_tracking" method="POST">
     <p id="required-signup">*Required</p>
     <fieldset>
        <input name="redirect_to" value="{{ publisher.todays_daily_deal_path | verifiable_url }}" type="hidden" />
        <label for="first_name">First Name*</label>
        <input class="dd_input" id="consumer_first_name" name="consumer[first_name]" title="First Name*" type="text" />
     </fieldset>
     
     <fieldset>   
        <label for="last_name">Last Name*</label>
        <input class="dd_input" id="consumer_last_name" name="consumer[last_name]" title="Last Name*" type="text" />
     </fieldset>   
     
     <fieldset>   
        <label for="consumer_email">Email*</label>
        <input class="dd_input" id="consumer_email" name="consumer[email]" size="30" type="text" />
      </fieldset>
      
      <fieldset>
        <label for="consumer_password">Password*</label>
        <input class="dd_input" id="consumer_password" name="consumer[password]" size="30" type="password" />
      </fieldset>
      
      <fieldset>
        <label for="consumer_password_confirmation">Confirm Password*</label>
        <input class="dd_input" id="consumer_password_confirmation" name="consumer[password_confirmation]" size="20" title="Confirm Password*" type="password" />
      </fieldset>
      
      <fieldset>
        <label for="zip_code">Show me deals for zip code*</label>
        <input id="subscriber_zip_code" class="dd_input" name="subscriber[zip_code]" size="10" type="text" />
      </fieldset>
     
      <fieldset id="agree_to_terms">
        <input name="consumer[agree_to_terms]" type="hidden" value="0" /><input id="consumer_agree_to_terms" name="consumer[agree_to_terms]" type="checkbox" value="1" />
        <label for="consumer_agree_to_terms" class="consumer_agree_to_terms">I agree to the <a href="#" onclick="window.open('{{ publisher.terms_path }}', '_blank'); return false; return false;">Terms</a> and <a href="#" onclick="window.open('{{ publisher.privacy_path }}', '_blank'); return false;">Privacy Policy</a></label>
      </fieldset>
      
      <fieldset id="buttons">
        <input class="signup" id="create-account-button" name="sign_up" type="submit" value="Create Your Account" />
        <span><a href="{{ publisher.todays_daily_deal_path }}">Cancel</a></span>
      </fieldset>
    </form>
    <div class="clear"></div>
	</div><!-- END .prefix_2 --> 
</div><!-- end .page_row -->
