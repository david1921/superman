<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
<% if @daily_deal -%>
<meta name="title" content="<%= @daily_deal.facebook_title %>" />
<meta name="description" content="<%= "#{@daily_deal.advertiser.name} Daily Deal! #{@daily_deal.value_proposition}" %>" />
<meta name='keywords' content="<%= "#{@daily_deal.advertiser.name}, #{@daily_deal.value_proposition}" %>">
<link rel="image_src" href="<%= url_for_facebook_daily_deal_image @daily_deal %>" />
<% else -%>
<meta name="description" content="<%= "Daily Deal! Get the best daily deals with a new deal every single day!" %>">
<meta name="keywords" content="Daily Deal! Hotel Deals, best deals, travel deals, vacation deals, restaurant deals">
<% end -%>

  <link rel="stylesheet" href="/stylesheets/scoped_reset.css" type="text/css" />
  <link rel="stylesheet" href="/stylesheets/application.css" type="text/css" />
  <link rel="stylesheet" href="/themes/daily_deals/stylesheets/daily_deals.css" type="text/css" />
  
  <link rel="stylesheet" href="/themes/<%= @publisher.publishing_group.label %>/stylesheets/daily_deals.css" type="text/css" />
  <link rel="stylesheet" href="/themes/<%= @publisher.publishing_group.label %>/stylesheets/<%= @publisher.publishing_group.label %>.css" type="text/css" />

  <link rel="shortcut icon" href="/themes/<%= @publisher.publishing_group.label %>/images/graphics/favicon.ico" type="image/x-icon" />
  <link rel="icon" href="/themes/<%= @publisher.publishing_group.label %>/images/graphics/favicon.ico" type="image/x-icon">

  
  <script src="/javascripts/prototype.js" type="text/javascript"></script>
  <script src="/javascripts/effects.js" type="text/javascript"></script>
  <script src="/javascripts/dragdrop.js" type="text/javascript"></script>
  <script src="/javascripts/controls.js" type="text/javascript"></script>
  <script src="/javascripts/application.js" type="text/javascript"></script>
  
  
<!--[if lte IE 9]>
<link href="/themes/<%= @publisher.label %>/stylesheets/ie.css" media="all" rel="stylesheet" type="text/css" />
<![endif]-->

<!--[if IE 9]>
<link href="/themes/<%= @publisher.label %>/stylesheets/ie9.css" media="all" rel="stylesheet" type="text/css" />
<![endif]-->
  
  <title><%= daily_deal_page_title %></title>
<%= raw render :partial => "/shared/tracking_google_analytics" %>
</head>

<body>


<div class="clear"></div>
<!--Analog_Analytics_Daily_Deal-->

<div id="analog_analytics">
	<%= render :partial => with_theme("shared/banner") %>

	<div id="daily_deal">
		<div id="dd_content">
	       	 
		    <%= raw render :partial => '/shared/flash', :locals => { :flash => flash } %>
		   <%= yield %>
		    <div class="clear"></div>
		    <div id="a_a"><a href="http://analoganalytics.com/"><img src="/images/powered_by_analog_analytics.png" width="169" height="20" alt="Powered by Analog Analytics" /></a></div>
		</div><!--dd_content-->
		
		<div id="dd_footer">
			<ul id="footer_nav">
				<li><a href="{{ publisher.todays_daily_deal_path }}"><%= t("todays_deal") %></a> </li>
				<li><a href="{{ publisher.how_it_works_path }}"><%= t(:how_it_works) %></a></li>
				<!-- <li><a href="">Past Deals</a></li> -->
				<li><a href="{{ publisher.feature_your_business_path }}"><%= t(:feature_your_business) %></a></li>
				<li><a href="{{ publisher.faq_path }}"><%= t(:faq) %></a></li>
				<li class="last"><a href="{{ publisher.contact_path }}"><%= t(:contact_us) %></a></li>
			</ul><!-- /footer_nav -->
			<div class="clear"></div>
			<ul id="legal_nav">
				<li><a href="{{ publisher.privacy_path }}"><%= t(:privacy_policy)%></a></li>
				<li class="last"><a href="{{ publisher.terms_path }}"><%= t(:terms_and_conditions)%></a></li>
			</ul><!-- /legal_nav -->
		</div><!-- /dd_footer -->
	</div><!--daily_deal-->

</div><!--analog_analytics-->

<%= render :partial => with_theme("shared/tracking_publisher") %>
<%= raw render :partial => 'daily_deals/javascript' %>
</body>
</html>
