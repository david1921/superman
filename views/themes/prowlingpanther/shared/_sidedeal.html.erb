<% @daily_deal.side_deals[0,2].each do |side_deal| %>
	<div class="side_deal_wrap">
		<p class="side_deal_value_prop"><a class="side_deal" href="<%= market_aware_daily_deal_url(side_deal) %>" target="_blank"><%= side_deal.value_proposition %></a></p>
		<div class="side_deal_text">
			<div class="side_deal_price<%= " variation" if !side_deal.daily_deal_variations.blank? %>"><% if !side_deal.daily_deal_variations.blank? -%><span class="variation">From</span><br /><% end %><%= formatted_price_for(side_deal.price_to_display) %></div>
				<p class="side_deal_value"><%= formatted_price_for(side_deal.value_to_display) %> VALUE</p>
			<a class="view_deal button gradient" href="<%= daily_deal_path(side_deal) %>">View Deal</a>
		</div><!-- /side_deal_text -->
		<div class="side_deal_thumb">
			<img src="<%= side_deal.photo.url(:facebook) %>" alt="" />
		</div>
		<div class="clear"></div>
	</div><!-- /side_deal_wrap -->
<% end -%>