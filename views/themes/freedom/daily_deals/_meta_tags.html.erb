<% if @daily_deal %>
  <meta name="title" content="<%= @daily_deal.facebook_title %>" />
  <meta name="description" content="<%= @daily_deal.facebook_description.html_safe %>" />
  <link rel="image_src" href="<%= url_for_facebook_daily_deal_image(@daily_deal) %>" />
  <% if @referral %>
    <meta property="og:title" content="<%= @daily_deal.publisher.daily_deal_referral_message_head %>" />
    <meta property="og:description" content="<%= @daily_deal.publisher.daily_deal_referral_message_body.html_safe %>" />
    <meta property="og:image" href="<%= @daily_deal.publisher.logo.url %>" />
  <% else %>
    <meta property="og:title" content="<%= @daily_deal.facebook_title %>" />
    <meta property="og:description" content="<%= @daily_deal.facebook_description.html_safe %>" />
    <meta property="og:image" href="<%= url_for_facebook_daily_deal_image(@daily_deal) %>" />
  <% end %>
<% end %>
