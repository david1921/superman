<div id="dd_nav">
	
	
	<!-- market dropdown -->
	  		
	<ul id="market_menu">
		<li><a href="{{ publisher.todays_daily_deal_path }}">Today's Deal</a></li>
		<li><a href="{{ publisher.contact_path }}">Contact Us</a></li>
		<li><a href="{{ publisher.faq_path }}">FAQ's</a></li>
		{% if publisher.publishing_group.live_publishers.size > 1 %}
		<li class="right">Change City
			 <ul>
			 	<li>
				  {% for live_publisher in publisher.publishing_group.live_publishers %}
				  {% if live_publisher.label == publisher.label %}
					<span class="current_location" style="display: none;">
					  {{ live_publisher.city }}, {{ live_publisher.state }}
					</span>
				  {% else %}
					<a href="{{ live_publisher.todays_daily_deal_url }}">
					  {{ live_publisher.city }}, {{ live_publisher.state }}
					</a>
				  {% endif %}
				 {% endfor %}
            	</li>
			 </ul>
		</li>
		{% endif %}
	</ul>
	<div class="clear"></div>             
	<!--/ market dropdown -->

	
	
</div><!-- /dd_nav -->