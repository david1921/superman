		<%= render :partial => 'shared/flash_messages' %>
		<%= render :partial => with_theme("shared/subscribe") %>
		<div id="analog_analytics">
			<div id="daily_deal">
				<%= render :partial => with_theme("shared/header") %>
				<div id="dd_content">
					<div id="dd_container">
						<div id="dd_content_container">
						<%= raw yield %>	
						</div><!-- dd_content_container -->
						<div class="clear"></div>
					</div><!--dd_container--> 
					<a id="aa_logo" href="http://analoganalytics.com/">
