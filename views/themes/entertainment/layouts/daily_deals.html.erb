		<script src="/javascripts/dragdrop.js" type="text/javascript"></script>
		<script src="/javascripts/controls.js" type="text/javascript"></script>
		<script src="/javascripts/application.js" type="text/javascript"></script>
		<script src="/themes/entertainment/javascript/autocolumn.min.js" type="text/javascript"></script>
		<script src="/themes/entertainment/javascript/cookies.js" type="text/javascript"></script>
		<script src="/themes/entertainment/javascript/css_browser_selector.js" type="text/javascript"></script>

		<% if @daily_deal %>
		<!-- Terms Popup -->
		<script src="/themes/entertainment/javascript/jquery.lightbox_me.js" type="text/javascript"></script>
		
		<script type="text/javascript" charset="utf-8">
			jQuery(document).ready(function($) {

				$('a#showterms').click(function(e) {
				    $('#termspopup').lightbox_me({
				    	centered: true
				    });
				    e.preventDefault();
				});

			});
		</script>
		<!-- /Terms Popup -->
		<% end %>

	
    

