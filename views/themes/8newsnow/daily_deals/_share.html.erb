<div id="share">
  <%= image_tag "/themes/8newsnow/images/type/share_the_deal.png", :title => "Share the deal", :alt => "Share the deal", :class => "hanging_head" %>
  <%= link_to( 
        image_tag("/themes/8newsnow/images/icons/facebook.png"),
        facebook_daily_deal_url(daily_deal),
        :onclick => "return facebook_popup('#{facebook_daily_deal_url(daily_deal, :popup => true)}')",
        :class => "facebook share_button_facebook",
        :id => "facebook_link",
        :title => "Share coupon on Facebook",
        :target => "_blank") %>
  <%= link_to(
        image_tag("/themes/8newsnow/images/icons/twitter.png"), 
        twitter_daily_deal_url(daily_deal),
        :class => "twitter share_button_twitter",
        :target => "_blank",
        :title => "Share coupon on Twitter"
      ) %>
  <%= mail_to(
        "", 
        image_tag("/themes/8newsnow/images/icons/email.png"), 
        :subject => "#{daily_deal.publisher_prefix}: #{daily_deal.value_proposition}",
        :body => "Check out this deal at #{daily_deal_url(daily_deal)}",
        :class => "share_button_mail"
  ) %>
  <div class="fblike">
    <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="http://deals.8newsnow.com/publishers/8newsnow/deal-of-the-day" show_faces="false" width="300"></fb:like>
   </div>
</div>
