		<div class="clear"></div>
	</div><!-- /deal info top row -->
	
	<div><!-- deal info bottom row -->
	
		<%= render :partial => with_theme('shared/deal_tab_content'), :locals => { :daily_deal => @daily_deal, :publisher => @publisher } %>
		
	</div><!-- /deal info bottom row -->

</div><!-- /main_column -->
