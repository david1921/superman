<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
<% if @daily_deal -%>
<meta name="title" content="<%= @daily_deal.facebook_title %>" />
<meta name="description" content="<%= "#{@daily_deal.advertiser.name} Daily Deal! #{@daily_deal.value_proposition}" %>" />
<meta name='keywords' content="<%= "#{@daily_deal.advertiser.name}, #{@daily_deal.value_proposition}" %>">
<link rel="image_src" href="<%= url_for_facebook_daily_deal_image @daily_deal %>" />
<% else -%>
<meta name="description" content="<%= "Daily Deal! Get the best daily deals with a new deal every single day!" %>">
<meta name="keywords" content="Daily Deal! Hotel Deals, best deals, travel deals, vacation deals, restaurant deals">
<% end -%>

  <link rel="stylesheet" href="/stylesheets/scoped_reset.css" type="text/css" />
  <link rel="stylesheet" href="/stylesheets/application.css" type="text/css" />
  <link rel="stylesheet" href="/themes/daily_deals/stylesheets/daily_deals.css" type="text/css" />

  <link rel="stylesheet" href="/themes/prowlingpanther/stylesheets/daily_deals.css" type="text/css" />
  <link rel="stylesheet" href="/themes/prowlingpanther/stylesheets/all_deals.css" type="text/css" />
  <link rel="stylesheet" href="/themes/prowlingpanther/stylesheets/prowlingpanther.css" type="text/css" />

  <link rel="shortcut icon" href="/themes/<%= @publisher.label %>/images/graphics/favicon.ico" type="image/x-icon" />
  <link rel="icon" href="/themes/<%= @publisher.label %>/images/graphics/favicon.ico" type="image/x-icon">

  <link rel="stylesheet" href="/themes/<%= @publisher.label %>/stylesheets/<%= @publisher.label %>.css" type="text/css" />

  <script src="/javascripts/lib/prototype.js" type="text/javascript"></script>
  <%= javascript_include_tag "jquery/jquery.1.7.1.min" %>
  <%= javascript_tag "$.noConflict();" %>
  <script src="/javascripts/effects.js" type="text/javascript"></script>
  <script src="/javascripts/dragdrop.js" type="text/javascript"></script>
  <script src="/javascripts/controls.js" type="text/javascript"></script>
  <script src="/javascripts/application.js" type="text/javascript"></script>
  <script src="/javascripts/lib/formvalue-clickblur.js" type="text/javascript"></script>

  <%= raw render :partial => with_theme("shared/publisher_head") %>
  <%= render :partial => with_theme("daily_deals/custom_stylesheet_includes") %>

<!--[if lte IE 9]>
<link href="/themes/prowlingpanther/stylesheets/ie.css" media="all" rel="stylesheet" type="text/css" />
<![endif]-->

<!--[if IE 9]>
<link href="/themes/prowlingpanther/stylesheets/ie9.css" media="all" rel="stylesheet" type="text/css" />
<![endif]-->

  <title><%= daily_deal_page_title %></title>
  <%= raw render :partial => "/shared/tracking_google_analytics" %>

</head>

<body>
<%= render :partial => with_theme("shared/publisher_header") %>


<div class="clear"></div>
<!--Analog_Analytics_Daily_Deal-->

<div id="analog_analytics">
	<%= render :partial => with_theme("shared/banner") %>

	<div id="daily_deal">
		<div id="dd_content">
			<%= render :partial => with_theme("shared/flash_messages") %>
			<div class="market_menu_selection_list_wrapper">
		 		<span class="close">x hide</span>
		 		<%= market_selection_list(@publisher) %>
			</div><!-- END .market_menu_selection_list_wrapper -->
			<%= javascript_include_tag "/themes/mytownvip/javascripts/marketMenu.js" %>
		   <%= yield %>
		    <div class="clear"></div>

            <%= raw render :partial => with_theme("shared/a_a_alt") %>

		</div><!--dd_content-->

		<%= render :partial => with_theme("shared/dd_footer") %>

	</div><!--daily_deal-->

</div><!--analog_analytics-->

<%= render :partial => with_theme("shared/publisher_footer") %>

<%= render :partial => with_theme("shared/tracking_publisher") %>
<%= raw render :partial => 'daily_deals/javascript' %>

<script type="text/javascript">
jQuery("#flash_notice").delay(4000).animate({
    "opacity": "0",
    "height": "0"
}, function () {
    jQuery(this).hide();
});
</script>

<script type="text/javascript">
jQuery("#flash_warn").delay(4000).animate({
    "opacity": "0",
    "height": "0"
}, function () {
    jQuery(this).hide();
});
</script>


</body>
</html>
