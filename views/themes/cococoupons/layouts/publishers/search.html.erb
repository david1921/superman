<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  
  <link rel="stylesheet" href="/stylesheets/scoped_reset.css" type="text/css" />
  <link rel="stylesheet" href="/stylesheets/application.css" type="text/css" />
  <link rel="stylesheet" href="/themes/daily_deals/stylesheets/daily_deals.css" type="text/css" />
  <link rel="stylesheet" href="/themes/cococoupons/stylesheets/daily_deals.css" type="text/css" />
  
  <link rel="stylesheet" href="/themes/cococoupons/stylesheets/cococoupons.css" type="text/css" />
  
  <link rel="stylesheet" href="/themes/cococoupons/stylesheets/coupon-offers.css" type="text/css" />
  
  <script src="/javascripts/lib/prototype.js" type="text/javascript"></script>
  <script src="/javascripts/effects.js" type="text/javascript"></script>
  <script src="/javascripts/dragdrop.js" type="text/javascript"></script>
  <script src="/javascripts/controls.js" type="text/javascript"></script>
  <script src="/javascripts/application.js" type="text/javascript"></script>
  <script src="/javascripts/deal.js" type="text/javascript"></script>
  <script src="/javascripts/coupons.js" type="text/javascript"></script>
  <script src="/javascripts/ghostie.js" type="text/javascript"></script>
  
<!--[if IE]>
<link href="/themes/cococoupons/stylesheets/ie.css" media="all" rel="stylesheet" type="text/css" />
<![endif]-->
  
  <title><%= daily_deal_page_title %></title>
  <%= raw render :partial => "shared/tracking_google_analytics" %>
</head>

<body id="offers">

<div class="clear"></div>
<!--Analog_Analytics_Daily_Deal-->


<div id="analog_analytics">
	<div id="daily_deal">
	
		<div id="banner">
      <%= render :partial => with_theme("shared/account_nav") %>

			<div class="clear"></div>
      <%- unless current_consumer_for_publisher?(@publisher) %>
        <div id="subscribe_form">
          <h4 class="subscribe">SIGN UP FOR FREE DEAL ALERTS!</h4>
          <form action="<%= publisher_subscribers_path(@publisher) %>" id="daily_deal_header" class="email_subscription_tracking" method="post">
            <p><input name="subscriber[must_accept_terms]" value="true" type="hidden" /></p>
            <p><input name="redirect_to" value="<%= verifiable_url(public_deal_of_day_path(:label => @publisher.label)) %>" type="hidden" /></p>
            <p><input id="subscriber_email" name="subscriber[email]" size="30" type="text" value="Email Address" onclick="this.value='';" onfocus="this.select()" onblur="this.value=!this.value?'Email Address':this.value;" /></p>
            <p><input id="subscribe_button" type="submit" value="Sign Up" /></p>
            <p id="terms"><input name="subscriber[terms]" value="0" type="hidden" />
              <input id="subscriber_terms" name="subscriber[terms]" value="1" type="checkbox" /> I agree to the &nbsp;<a href="#" onclick="window.open('<%= terms_publisher_daily_deals_path(:publisher_id => @publisher.id) %>', '_blank'); return false; return false;" style="color:#fff;">Terms</a> and &nbsp;<a href="#" onclick="window.open('<%= privacy_policy_publisher_daily_deals_path(:publisher_id => @publisher.id) %>', '_blank'); return false; return false;" style="color:#fff;">Privacy Policy</a>
            </p>
          </form>
        </div><!-- /subscribe_form -->
      <%- end %>
    </div><!--banner-->


    <div id="main_tabs">
			<a href="<%= public_deal_of_day_path(:label => @publisher.label) %>"><strong>Deal of the Day</strong></a>
			<a href="<%= public_offers_path(@publisher) %>"><strong>Coupons</strong></a>
		</div>
		 
		<div id="dd_content">

      <%= render :partial => 'shared/flash_messages' %>
      <%= yield %>
		    <div class="clear"></div>
		    <%= raw render :partial => 'shared/a_a_alt' %>
		</div><!--dd_content-->
		
		<div id="dd_footer">
			<ul id="footer_nav">
				<li><a href="<%= public_deal_of_day_path(:label => @publisher.label) %>">Today's Deal</a> </li>
				<li><a href="<%= how_it_works_publisher_daily_deals_path(@publisher) %>">How It Works</a></li>
				<!-- <li><a href="">Past Deals</a></li> -->
				<li><a href="<%= feature_your_business_publisher_daily_deals_path(@publisher) %>">Feature Your Business</a></li>
				<li><a href="<%= faqs_publisher_daily_deals_path(:publisher_id => @publisher.id) %>">FAQ</a></li>
				<li class="last"><a href="<%= contact_publisher_daily_deals_path(:publisher_id => @publisher.id) %>">Contact Us</a></li>
			</ul><!-- /footer_nav -->
			<div class="clear"></div>
			<ul id="legal_nav">
				<li><a href="<%= privacy_policy_publisher_daily_deals_path(:publisher_id => @publisher.id) %>">Privacy Policy</a></li>
				<li class="last"><a href="<%= terms_publisher_daily_deals_path(:publisher_id => @publisher.id) %>">Terms and Conditions</a></li>
			</ul><!-- /legal_nav -->
		</div><!-- /dd_footer -->
	</div><!--daily_deal-->

</div><!--analog_analytics-->

<%= render :partial => with_theme("shared/tracking_publisher") %>
</body>
</html>
