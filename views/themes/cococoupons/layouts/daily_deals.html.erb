</head>

<body>

<div class="clear"></div>
<!--Analog_Analytics_Daily_Deal-->


<div id="analog_analytics">
	<div id="daily_deal">
	
		<div id="banner">
			<%= render :partial => with_theme("shared/account_nav") %>

			<div class="clear"></div>
    </div><!--banner-->


    <div id="main_tabs">
			<!-- <a href="<%= public_deal_of_day_path(:label => @publisher.label) %>" class="active"><strong>Deal of the Day</strong></a> -->
			<a class="active" href="<%= public_offers_path(@publisher) %>"><strong>Coupons</strong></a>
		</div>

    <div id="dd_content">
      <%= render :partial => with_theme("shared/dd_nav") %>
      <%= render :partial => 'shared/flash_messages' %>
      <%= yield %>

      <div class="clear"></div>
      <%= raw render :partial => 'shared/a_a_alt' %>
    </div><!--dd_content-->
		
		<div id="dd_footer">
			<ul id="footer_nav">
<!-- 				<li><a href="<%= public_deal_of_day_path(:label => @publisher.label) %>">Today's Deal</a> </li> -->
				<li><a href="<%= how_it_works_publisher_daily_deals_path(@publisher) %>">How It Works</a></li>
				<!-- <li><a href="">Past Deals</a></li> -->
				<li><a href="<%= feature_your_business_publisher_daily_deals_path(@publisher) %>">Feature Your Business</a></li>
				<li><a href="<%= faqs_publisher_daily_deals_path(:publisher_id => @publisher.id) %>">FAQ</a></li>
				<li class="last"><a href="<%= contact_publisher_daily_deals_path(:publisher_id => @publisher.id) %>">Contact Us</a></li>
			</ul><!-- /footer_nav -->
			<div class="clear"></div>
			<ul id="legal_nav">
				<li><a href="<%= privacy_policy_publisher_daily_deals_path(:publisher_id => @publisher.id) %>">Privacy Policy</a></li>
				<li class="last"><a href="<%= terms_publisher_daily_deals_path(:publisher_id => @publisher.id) %>">Terms and Conditions</a></li>
			</ul><!-- /legal_nav -->
		</div><!-- /dd_footer -->
	</div><!--daily_deal-->

</div><!--analog_analytics-->

<%= render :partial => with_theme("shared/tracking_publisher") %>
<%= raw render :partial => 'daily_deals/javascript' %>
