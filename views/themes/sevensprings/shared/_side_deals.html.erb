<div id="other_deals" class="sidebar_box other_deal_tracking">
	<h3>Other Local Deals</h3>
	<% @daily_deal.side_deals.each do |side_deal| %>
		<div class="side_deal_wrap">
			<p><a class="side_deal" href="<%= market_aware_daily_deal_url(side_deal) %>" target="_blank"><%= side_deal.value_proposition %></a></p>
			<div class="side_deal_text">
				<div class="side_deal_price"><%= formatted_price_for(side_deal.price, side_deal.currency_symbol) %></div>
				<p class="side_deal_value"><%= formatted_price_for(side_deal.value, side_deal.currency_symbol) %> VALUE</p>
				<a class="view_deal" href="<%= daily_deal_path(side_deal) %>"><span>View Deal</span></a>
			</div><!-- /side_deal_text -->
			<div class="side_deal_thumb"><img src="<%= side_deal.photo.url(:facebook) %>" alt="" /></div>
			<div class="clear"></div>
		</div><!-- /side_deal_wrap -->
	  <% end %>
</div><!-- /other_deals -->
