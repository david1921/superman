<div id="share">
	<a href="/daily_deals/<%= @daily_deal.id %>/facebook" class="share_link share_button_facebook" id="facebook_link" onclick="return facebook_popup('/daily_deals/<%= @daily_deal.id %>/facebook?popup=true')" target="_blank" title="Share coupon on Facebook"><span>Share on Facebook</span></a>
	<a href="<%= twitter_daily_deal_url(@daily_deal, :host => @publisher.daily_deal_host) %>" class="share_link share_button_twitter" target="_blank"><span>Share on Twitter</span></a>
	<a href="mailto:?subject=<%= @daily_deal.publisher_prefix %>: <%= @daily_deal.value_proposition %>&amp;body=Check out this deal at <%= market_aware_daily_deal_url(@daily_deal) %>" class="share_link share_button_mail"><span>Email to a Friend</span></a>
</div><!-- /share buttons -->