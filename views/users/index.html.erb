<% form_tag :action => "delete" do %>
  <table cellspacing="0" summary="users" class="users">
    <tr>
      <th>&nbsp;</th>
      <th class="login">Login</th>
      <th class="name">Name</th>
      <th class="email">Email</th>
      <th>&nbsp;</th>
    </tr>

    <%= render(:partial => "users/user", :collection => @users.sort_by(&:login)) %>

    <% if @users.empty? -%>
    <tr>
      <td colspan="5" style="text-align: center;">Click New to add a user account</td>
    </tr>
    <% end -%>
  </table>

  <div class="full_width buttons">
    <%= submit_tag("Delete", :confirm => "Really delete?", :class => "left") unless @users.empty? %>
    <%= button_to_function("New") { |page| page.redirect_to :action => :new } %>
  </div> 
<% end -%>
