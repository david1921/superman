<% set_daily_deal_page_title_slug "Change Password" %>

<div class="page_row">
  <div class="prefix_2 page_column_8 suffix_2 first rounded_corners">
    <h2>Change Your Password</h2>

    <% form_for [@publisher, @consumer], :url => publisher_consumer_password_reset_path, :method => :put do |f| -%>
      <%= f.error_messages(:header_message => "Errors prevent your password from being changed") %>

      <%= f.password_field_div :password, "New Password:" %>
      <%= f.password_field_div :password_confirmation, "Confirm New Password:" %>

      <div class="buttons full_width">
        <%= submit_tag("Change Password", :name => "change_password") %>
      </div>
    <% end -%>
  </div>
</div>

